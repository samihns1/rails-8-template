<style>
  .auth-card {
    max-width: 480px;
    margin: 1.5rem auto 2.5rem;
    background: #ffffff;
    padding: 26px 30px;
    border-radius: 14px;
    box-shadow: 0 12px 32px rgba(0,0,0,0.1);
  }

  .auth-card h2 {
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 1.6rem;
    font-weight: 700;
    text-align: center;
    color: #000000;
  }

  .auth-field {
    margin-bottom: 1rem;
  }

  .auth-field label {
    font-weight: 600;
    color: #000000;
    display: block;
    margin-bottom: 0.3rem;
  }

  .auth-input {
    width: 100%;
    padding: 0.55rem 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    font-size: 1rem;
    color: #000000;
    background: #ffffff;
  }

  .auth-input:focus {
    outline: none;
    border-color: #6b7280;
    box-shadow: 0 0 0 2px #e5e7eb;
  }

  .auth-btn {
    width: 100%;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    border: none;
    background: #3b82f6;
    color: white;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: 0.15s ease-in-out;
  }

  .auth-btn:hover {
    filter: brightness(0.9);
    transform: translateY(-2px);
  }

  .auth-links {
    text-align: center;
    margin-top: 1rem;
  }

  .auth-links a {
    color: #000000;
    text-decoration: none;
  }

  .auth-links a:hover {
    color: #6b7280;
  }
</style>


<div class="auth-card">

  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="auth-field">
      <%= f.label :email %>
      <%= f.email_field :email,
                        autofocus: true,
                        autocomplete: "email",
                        class: "auth-input" %>
    </div>

    <div style="margin-top:1.25rem;">
      <%= f.submit "Send reset password instructions", class: "auth-btn" %>
    </div>

  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>

</div>
