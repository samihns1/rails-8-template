<h1>
  List of all games
</h1>

<hr>

<article>
  <header>
    <h2>
      Add a new game
    </h2>
  </header>

  <form action="/insert_game" method="post">
    <div>
      <label for="status_box">
        Status
      </label>

      <input type="text" id="status_box" name="query_status">
    </div>

    <div>
      <label for="creator_id_box">
        Creator
      </label>

      <input type="text" id="creator_id_box" name="query_creator_id">
    </div>

    <div>
      <label for="table_cards_box">
        Table cards
      </label>

      <input type="text" id="table_cards_box" name="query_table_cards">
    </div>

    <div>
      <label for="deck_state_box">
        Deck state
      </label>

      <input type="text" id="deck_state_box" name="query_deck_state">
    </div>

    <div>
      <label for="winning_user_id_box">
        Winning user
      </label>

      <input type="text" id="winning_user_id_box" name="query_winning_user_id">
    </div>

    <div>
      <label for="started_at_box">
        Started at
      </label>

      <input type="datetime-local" id="started_at_box" name="query_started_at">
    </div>

    <div>
      <label for="ended_at_box">
        Ended at
      </label>

      <input type="datetime-local" id="ended_at_box" name="query_ended_at">
    </div>

    <div>
      <label for="gameplayers_count_box">
        Gameplayers count
      </label>

      <input type="text" id="gameplayers_count_box" name="query_gameplayers_count">
    </div>

    <button type="submit">
      Create game
    </button>
  </form>
</article>

<hr>

<article>
  <ul>
    <% @list_of_games.each do |a_game| %>
      <li>
        <a href="/games/<%= a_game.id %>">
          Game #<%= a_game.id %>
        </a>
      </li>
    <% end %>
  </ul>
</article>

<hr>
