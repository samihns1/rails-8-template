<style>
  .form-card {
    background:#ffffff;
    padding:24px 28px;
    border-radius:12px;
    max-width:480px;
    margin:0 auto;
    box-shadow:0 10px 24px rgba(0,0,0,0.08);
  }

  .form-card label {
    font-weight:600;
    color:#374151;
    margin-bottom:4px;
    display:block;
  }

  .form-card input,
  .form-card select {
    width:100%;
    padding:10px 12px;
    border-radius:8px;
    border:1px solid #d1d5db;
    margin-bottom:16px;
    font-size:1rem;
  }

  .submit-btn {
    display:block;
    width:100%;
    padding:0.75rem 1rem;
    background:#3b82f6;
    color:white;
    border-radius:8px;
    border:none;
    font-weight:600;
    cursor:pointer;
    font-size:1rem;
    transition:background-color 0.2s ease, transform 0.1s ease, filter 0.2s ease;
  }

  .submit-btn:hover {
    filter:brightness(85%);
    transform:translateY(-2px);
  }
</style>

<div style="text-align:center; margin-top:1.5rem; margin-bottom:1.75rem;">
  <h1 style="
    font-size:2.3rem;
    font-weight:700;
    color:#1f2937;
    margin-bottom:0.5rem;
  ">
    Basra
  </h1>
</div>

<div class="form-card">
  <h2 style="
    font-size:1.4rem;
    font-weight:700;
    color:#111827;
    margin-top:0;
    margin-bottom:1rem;
    text-align:center;
  ">
    Create a New Game
  </h2>

  <form action="/insert_game" method="post">

    <div style="margin-bottom:1rem;">
      <label for="name_box">Game Name</label>
      <input type="text" id="name_box" name="query_name" placeholder="Optional">
    </div>

    <div style="margin-bottom:1rem;">
      <label for="max_players_box">Maximum Number of Players</label>
      <select id="max_players_box" name="query_max_players">
        <option value="2">2 players</option>
        <option value="3">3 players</option>
        <option value="4">4 players</option>
      </select>
    </div>

    <button type="submit" class="submit-btn">
      Create Game
    </button>

  </form>
</div>
